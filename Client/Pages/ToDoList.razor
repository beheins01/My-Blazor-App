@page "/ToDoList"

<h1>Todo (@todos.Count(todo => !todo.IsDone))</h1>

<ul>
    @foreach (var todo in todos)
    {
        <li>
            <input type="checkbox" @bind="todo.IsDone" />
            <input @bind="todo.Title" />
        </li>
    }
</ul>

<input placeholder="Something todo" @bind="newTodo" />
<button @onclick="AddTodo">Add todo</button>

@code {
    private List<TodoItem> todos = new();       //This creates a private list for to do list items
    private string newTodo;                     //This creats to items on to do list

    private void AddTodo()
    {
        if (!string.IsNullOrWhiteSpace(newTodo))            // checks to see if anything is written in the to do list
        {
            todos.Add(new TodoItem { Title = newTodo });    // adds a new to do item to the list
            newTodo = string.Empty;                         // set todo to an empty string
        }
    }
}
